
# This is the default Ubuntu nginx.conf with comments stripped and
# configuration for haverer-api added instead.

user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
	worker_connections 768;
}


# XXX: IPv6 ?

http {

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	gzip on;
	gzip_disable "msie6";


    server {
        listen {{ http_port }};
        server_name {{ domain_name }};
        return 301 https://$server_name$request_uri;
    }

    server {
           listen {{ https_port }};
           server_name {{ domain_name }};

           ssl on;
           ssl_certificate {{ ssl_certificate_path }};
           ssl_certificate_key {{ ssl_key_path }};

           location / {
                    proxy_pass http://127.0.0.1:{{ app_server_port }};
           }
    }

    server {
        listen {{ http_port }};
        server_name {{ static_domain_name }};
        return 301 https://$server_name$request_uri;
    }

    server {
           listen {{ https_port }};
           server_name {{ static_domain_name }};

           ssl on;
           ssl_certificate {{ ssl_certificate_path }};
           ssl_certificate_key {{ ssl_key_path }};

           location {{ static_location }} {
                    alias {{ static_file_path }};
                    expires max;
           }
    }

}
