description "haverer-api"
author "jml@mumak.net"

start on runlevel [2345]
stop on runlevel [!2345]

setuid {{ app_server_user }}

env APPROOT=https://{{ domain_name }}
env HOST=127.0.0.1
env PORT={{ app_server_port }}

env GOOGLE_CLIENT_ID={{ google_client_id }}
env GOOGLE_CLIENT_SECRET={{ google_client_secret }}

env STATIC_ROOT=https://{{ static_domain_name }}{{ static_location }}

chdir /home/{{ app_server_user }}/

respawn

exec /home/{{ app_server_user }}/haverer-api
